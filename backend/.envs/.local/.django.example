# General
# ------------------------------------------------------------------------------
USE_DOCKER=yes
IPYTHONDIR=/app/.ipython

# authentication
USERNAME_FIELD=email
DJANGO_SECRET_KEY=None

# Email
# ------------------------------------------------------------------------------
SMTP=True
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=host.domain.x
EMAIL_PORT=000
EMAIL_USE_TLS=True
EMAIL_USE_SSL=False
EMAIL_HOST_USER=user@domain.x
DEFAULT_FROM_EMAIL=user@domain.x
EMAIL_HOST_PASSWORD=password

# DATABASE
DATABASE_URL=postgres://user:password@host/db
